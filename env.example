# FTL GYM Environment Variables
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/ftl_gym

# Redis
REDIS_URL=redis://redis:6379

# Monitoring
ELASTICSEARCH_URL=http://elasticsearch:9200
PROMETHEUS_URL=http://prometheus:9090
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# GymMaster API
GYM_API_KEY=your-gym-api-key
GYM_API_URL=https://ftl.gymmasteronline.com/portal/api/v1

# Face Recognition
INSIGHTFACE_MODEL_PATH=/app/models
FACE_RECOGNITION_THRESHOLD=0.6

# Security
RATE_LIMIT_PER_MINUTE=60
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
